<persistence	xmlns="http://java.sun.com/xml/ns/persistence"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
			    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
                version="1.0">
    <persistence-unit	name="OneNightCar"
                         transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- mySQL -->
                <property	name="javax.persistence.jdbc.driver"	        value="com.mysql.cj.jdbc.Driver" />
                <property	name="javax.persistence.jdbc.url"	            value="jdbc:mysql://localhost:3306/OneNightCar" />
                <property	name="javax.persistence.jdbc.user"	            value="root" />
                <property	name="javax.persistence.jdbc.password"	        value="" />

            <!-- EclipseLink Properties -->
            <!--Erases all the tables and starts from scratch-->
                <property	name="eclipselink.ddl-generation"	            value="drop-and-create-tables" />

            <!--Create Table and concatenates content-->
                <!--<property	name="eclipselink.ddl-generation"	        value="drop-or-extend-tables" />-->

                <property   name="eclipselink.create-ddl-jdbc-file-name"    value="createDDL_ddlGeneration.jdbc"/>
                <property   name="eclipselink.drop-ddl-jdbc-file-name"      value="dropDDL_ddlGeneration.jdbc"/>
                <property   name="eclipselink.logging.level"                value="INFO"/>
                <property	name="eclipselink.ddl-generation.output-mode"	value="both" />
        </properties>

    </persistence-unit>
</persistence>